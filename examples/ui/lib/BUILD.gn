config("config") {
  include_dirs = [ "//topaz" ]
}

source_set("scenic_skia") {
  sources = [
    "host_canvas_cycler.cc",
    "host_canvas_cycler.h",
    "host_surfaces.cc",
    "host_surfaces.h",
    "image_info.cc",
    "image_info.h",
  ]

  public_deps = [
    "//sdk/lib/ui/scenic/cpp",
    "//src/lib/fxl",
    "//third_party/skia",
  ]

  public_configs = [ ":config" ]
}

group("skia") {
  public_deps = [
    ":skia_fonts",
    ":skia_type_converters",
    ":skia_vmo",
  ]
}

source_set("skia_fonts") {
  sources = [
    "skia_font_loader.cc",
    "skia_font_loader.h",
  ]

  public_deps = [
    "//sdk/fidl/fuchsia.fonts",
    "//zircon/public/lib/fit",
  ]

  deps = [
    ":skia_type_converters",
    ":skia_vmo",
    "//src/lib/fxl",
    "//third_party/skia",
  ]

  public_configs = [ ":config" ]
}

source_set("skia_type_converters") {
  sources = [
    "type_converters.cc",
    "type_converters.h",
  ]

  public_deps = [
    "//garnet/public/lib/fsl",
    "//sdk/fidl/fuchsia.math",
    "//third_party/skia",
  ]

  public_configs = [ ":config" ]
}

source_set("skia_vmo") {
  sources = [
    "skia_vmo_data.cc",
    "skia_vmo_data.h",
  ]

  public_deps = [
    "//garnet/public/lib/fsl",
    "//src/lib/fxl",
    "//third_party/skia",
    "//zircon/public/lib/zx",
  ]

  deps = [
    "//zircon/public/lib/trace",
  ]

  public_configs = [ ":config" ]
}

source_set("skia_view") {
  sources = [
    "skia_view.cc",
    "skia_view.h",
  ]

  public_deps = [
    ":scenic_skia",
    "//garnet/public/lib/ui/base_view/cpp",
    "//third_party/skia",
  ]

  public_configs = [ ":config" ]
}
