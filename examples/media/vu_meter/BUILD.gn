import("//build/package.gni")

executable("vu_meter") {
  sources = [
    "main.cc",
    "vu_meter_params.cc",
    "vu_meter_params.h",
    "vu_meter_view.cc",
    "vu_meter_view.h",
  ]

  deps = [
    "//garnet/public/lib/fsl",
    "//garnet/public/lib/media/fidl",
    "//garnet/public/lib/media/transport",
    "//garnet/public/lib/ui/view_framework:skia",
    "//garnet/public/lib/ui/view_framework:view_provider",
    "//third_party/skia",
  ]
}

package("package") {
  system_image = true
  package_name = "vu_meter"

  deps = [
    ":vu_meter",
  ]

  binaries = [ {
        name = "vu_meter"
      } ]
}
