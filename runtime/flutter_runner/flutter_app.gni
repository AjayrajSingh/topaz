  target(flutter1_default_app, target_name) {
    forward_variables_from(invoker, "*", [ "aot" ])
  }
}
template("flutter2_app") {
  target(flutter2_default_app, target_name) {
    forward_variables_from(invoker, "*", [ "aot" ])
  }
