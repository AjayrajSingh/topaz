  if (defined(invoker.aot) && invoker.aot) {
    flutter_aot_app(target_name) {
      forward_variables_from(invoker, "*", [ "aot" ])
    }
  } else {
    target(flutter_default_app, target_name) {
      forward_variables_from(invoker, "*", [ "aot" ])
    }
  }
}
