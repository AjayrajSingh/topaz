import("//packages/package.gni")

package("contacts") {
  app = true

  deps = [
    "//apps/modules/contacts/agents",
    "//apps/modules/contacts/modules/contact_list",
    "//apps/modules/contacts/modules/contact_list:test",
    "//apps/modules/contacts/modules/contacts",
    "//apps/modules/contacts/modules/contacts:test",
    "//apps/modules/contacts/services",
  ]

  binaries = [
    {
      source = "contacts_content_provider.dartx"
      name = "contacts_content_provider"
    },
    {
      source = "gen/apps/modules/contacts/modules/contacts/contacts.flx"
      name = "contacts"
    },
    {
      source = "gen/apps/modules/contacts/modules/contact_list/contact_list.flx"
      name = "contact_list"
    },
  ]
}
