import("//packages/package.gni")
import("//apps/dart_content_handler/dart_app.gni")

dart_app("mi_dashboard_dart") {
  output_name = "mi_dashboard.dartx"

  main_dart = "main.dart"

  source_dir = "."

  deps = [
    "//application/lib/app/dart",
    "//apps/maxwell/lib/context/dart",
    "//apps/maxwell/services/context:context_dart",
    "//apps/maxwell/services/context:debug_dart",
    "//apps/maxwell/services/suggestion:debug_dart",
    "//apps/maxwell/services/suggestion:suggestion_dart",
    "//apps/maxwell/services/user:user_dart",
    "//lib/fidl/dart",
    "//third_party/dart-pkg/pub/http",
  ]
}

package("mi_dashboard") {
  app = true
  # this should be set to true once dart packages can be archives
  archive = false

  deps = [
    ":mi_dashboard_dart",
  ]

  binaries = [ {
        name = "mi_dashboard.dartx"
        dest = "agents/mi_dashboard.dartx"
      } ]

  resources = [
    {
      path = rebase_path(
              "//apps/maxwell/src/agents/mi_dashboard/webroot/index.html")
      dest = "mi_dashboard/webroot/index.html"
    },
    {
      path = rebase_path(
              "//apps/maxwell/src/agents/mi_dashboard/webroot/dashboard.js")
      dest = "mi_dashboard/webroot/dashboard.js"
    },
    {
      path = rebase_path(
              "//apps/maxwell/src/agents/mi_dashboard/webroot/dashboard.css")
      dest = "mi_dashboard/webroot/dashboard.css"
    },
    {
      path =
          rebase_path("//apps/maxwell/src/agents/mi_dashboard/webroot/logo.png")
      dest = "mi_dashboard/webroot/logo.png"
    },
    {
      path =
          rebase_path("//apps/maxwell/src/agents/mi_dashboard/dashboard.config")
      dest = "mi_dashboard/dashboard.config"
    },
  ]
}
