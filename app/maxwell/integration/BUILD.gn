import("//mojo/public/mojo_application.gni")

mojo_native_application("integration") {
  output_name = "maxwell_test"

  testonly = true

  deps = [
    ":context_engine_test",
    ":suggestion_engine_test",
    "//mojo/public/cpp/application:test_support_standalone",
  ]
}

source_set("context_engine_test") {
  testonly = true

  sources = [
    "context_engine_test.cc",
  ]

  deps = [
    ":common",
    "//apps/maxwell/acquirers/mock:gps",
    "//apps/maxwell/interfaces",
    "//apps/maxwell/interfaces:formatting",
    "//mojo/public/cpp/application",
    "//mojo/public/cpp/application:test_support",
  ]
}

source_set("suggestion_engine_test") {
  testonly = true

  sources = [
    "suggestion_engine_test.cc",
  ]

  deps = [
    ":common",
    "//apps/maxwell/acquirers/mock:gps",
    "//apps/maxwell/agents:ideas",
    "//apps/maxwell/interfaces",
    "//apps/maxwell/interfaces:formatting",
    "//mojo/public/cpp/application",
    "//mojo/public/cpp/application:test_support",
  ]
}

source_set("common") {
  testonly = true

  sources = [
    "test.cc",
    "test.h",
  ]

  deps = [
    "//apps/maxwell:debug",
    "//mojo/public/cpp/application",
    "//mojo/public/cpp/application:test_support",
    "//mojo/public/cpp/bindings:utility",
    "//mojo/public/cpp/utility",
    "//third_party/gtest",
  ]
}
