import("//mojo/public/mojo_application.gni")

mojo_native_application("integration") {
  output_name = "maxwell_test"

  testonly = true

  deps = [
    ":context_engine_test",
    ":suggestion_engine_test",
  ]
}

source_set("context_engine_test") {
  testonly = true

  sources = [
    "context_engine_test.cc",
  ]

  deps = [
    ":common",
    "//apps/maxwell/acquirers/mock:gps",
    "//apps/maxwell/services",
    "//apps/maxwell/services:formatting",
    "//apps/modular/lib/app",
  ]
}

source_set("suggestion_engine_test") {
  testonly = true

  sources = [
    "suggestion_engine_test.cc",
  ]

  deps = [
    ":common",
    "//apps/maxwell/acquirers/mock:gps",
    "//apps/maxwell/agents:ideas",
    "//apps/maxwell/services",
    "//apps/maxwell/services:formatting",
    "//apps/modular/lib/app",
  ]
}

source_set("common") {
  testonly = true

  sources = [
    "context_engine_test_base.h",
    "test.cc",
    "test.h",
  ]

  deps = [
    "//apps/maxwell:agent_environment_host",
    "//apps/maxwell/services",
    "//apps/modular/lib/app",
    "//lib/mtl",
  ]

  public_deps = [
    "//third_party/gtest",
  ]
}
