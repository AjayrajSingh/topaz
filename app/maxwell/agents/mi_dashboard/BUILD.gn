import("//build/package.gni")
import("//topaz/runtime/dart_runner/dart_app.gni")

dart_app("mi_dashboard") {
  main_dart = "main.dart"

  source_dir = "."

  deps = [
    "//peridot/public/lib/context/fidl:fidl_dart",
    "//peridot/public/lib/suggestion/fidl:debug_dart",
    "//peridot/public/lib/suggestion/fidl:fidl_dart",
    "//peridot/public/lib/user_intelligence/fidl:fidl_dart",
    "//third_party/dart-pkg/pub/http",
    "//topaz/public/lib/app/dart",
    "//topaz/public/lib/context/dart",
    "//topaz/public/lib/fidl/dart",
  ]
}

package("mi_dashboard_resources") {
  system_image = true

  resources = [
    {
      path = rebase_path(
              "//topaz/app/maxwell/agents/mi_dashboard/webroot/index.html")
      dest = "mi_dashboard/webroot/index.html"
    },
    {
      path = rebase_path(
              "//topaz/app/maxwell/agents/mi_dashboard/webroot/dashboard.js")
      dest = "mi_dashboard/webroot/dashboard.js"
    },
    {
      path = rebase_path(
              "//topaz/app/maxwell/agents/mi_dashboard/webroot/dashboard.css")
      dest = "mi_dashboard/webroot/dashboard.css"
    },
    {
      path = rebase_path(
              "//topaz/app/maxwell/agents/mi_dashboard/webroot/logo.png")
      dest = "mi_dashboard/webroot/logo.png"
    },
    {
      path = rebase_path(
              "//topaz/app/maxwell/agents/mi_dashboard/dashboard.config")
      dest = "mi_dashboard/dashboard.config"
    },
  ]
}
