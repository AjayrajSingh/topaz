import("//third_party/cobalt_config/cobalt_config.gni")
import("//topaz/runtime/dart_runner/dart_app.gni")

cobalt_config("generate_module_usage_tracking_config") {
  output_name = "cobalt_config.pb"
  project_id = 101
}

dart_app("usage_log") {
  main_dart = "main.dart"

  source_dir = "."
  sources = []

  non_dart_deps = [
    ":generate_module_usage_tracking_config",
  ]

  deps = [
    "//peridot/public/fidl/fuchsia.modular",
    "//topaz/public/dart/fidl",
    "//topaz/public/lib/app/dart",
    "//topaz/public/lib/context/dart",
    "//zircon/public/fidl/fuchsia-cobalt",
  ]

  resources = [
    {
      path = rebase_path(
              get_label_info(
                             ":generate_module_usage_tracking_config",
                             "target_gen_dir")
              + "/cobalt_config.pb")
      dest = "cobalt_config.pb"
    }
  ]
}
