import("//packages/package.gni")
import("//topaz/runtime/dart_runner/dart_app.gni")

dart_app("usage_log_dart") {
  output_name = "usage_log.dartx"

  main_dart = "main.dart"

  source_dir = "."

  deps = [
    "//topaz/public/lib/app/dart",
    "//garnet/public/lib/cobalt/fidl:fidl_dart",
    "//topaz/public/lib/fidl/dart",
    "//peridot/public/lib/context/dart",
    "//peridot/public/lib/context/fidl:fidl_dart",
  ]
}

package("usage_log") {
  app = true

  # this should be set to true once dart packages can be archives
  archive = false

  deps = [
    ":usage_log_dart",
  ]

  binaries = [ {
        name = "usage_log.dartx"
        dest = "agents/usage_log.dartx"
      } ]
}
