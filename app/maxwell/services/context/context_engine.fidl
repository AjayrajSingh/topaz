module maxwell;

import "context_publisher.fidl";
import "context_provider.fidl";

// Top-level service provider interface that vends services to read and write
// context data.
[ServiceName="maxwell.ContextEngine"]
interface ContextEngine {
  // Gets a service that allows clients to publish context data.
  GetPublisher(string url, ContextPublisher& request);

  // Gets a service that allows clients to read context data.
  GetProvider(string url, ContextProvider& request);
};
