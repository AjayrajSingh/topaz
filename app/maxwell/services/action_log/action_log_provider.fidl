module maxwell;

struct Action {
  string component_url;
  string method;
  // JSON-string
  string parameters;
};

[ServiceName="maxwell.ActionLogProvider"]
interface ActionLogProvider {
  // When a new action is logged, an Action is sent to |listener|.
  Subscribe(ActionLogListener listener);
};

interface ActionLogListener {
  // Receives an action that was just logged.
  OnAction(Action action);
};
