import("//packages/package.gni")

package("maxwell") {
  app = true

  deps = [
    "src/user:maxwell_main",
  ]

  binaries = [ {
        name = "maxwell"
        source = "maxwell_main"
      } ]

  resources = [
    {
      path = rebase_path("src/user/resources/default_config.json")
      dest = "maxwell/default_config.json"
    },
    {
      path = rebase_path("src/user/resources/test_config.json")
      dest = "maxwell/test_config.json"
    },
  ]
}

# TODO(thatguy): This target is temporary while we tease apart the build
# artifacts into packages.
group("all") {
  deps = [
    "src/acquirers",
    "src/action_log",
    "src/agents",
    "src/context_engine",
    "src/modules",
    "src/resolver",
    "src/suggestion_engine",
    "src/user",
  ]
}
