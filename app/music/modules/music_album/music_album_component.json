{
  "fuchsia:component": {
    "name": "music_album",
    "url": "file:///system/apps/music_album"
  },
  "fuchsia:program": {
    "resource": "main"
  },
  "fuchsia:resources": {
    "main": "music_album_component"
  },
  "fuchsia:module": {
    "contract": "view",
    "data_schema": {
      "type": "object",
      "anyOf": [{
        "properties" : {
          "scheme" : { "enum": ["spotify"] },
          "host" : { "enum": ["album"] }
        }
      }, {
        "properties": {
          "host": { "enum": ["open.spotify.com"] },
          "path segments": {
            "type": "array",
            "items": [{ "enum": ["album"] }]
          }
        }
      }]
    }
  }
}
